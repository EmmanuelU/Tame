<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:weightSum="1"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal">

    <CheckBox
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Enable"
	android:button="@null"
	android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:id="@+id/touchkey_bln"
	android:key="touchkey_bln"

        android:textSize="20dp"
        android:layout_alignParentTop="true"/>

    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#DBDBDB"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerHorizontal="true"
	    android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timeout After:     ### Blinks"
            android:layout_weight="0.08"
            android:textSize="20dp"
            android:id="@+id/cur_touchkey_bln_blink"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

	<SeekBar
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:id="@+id/touchkey_bln_max_blink"
            android:key="touchkey_bln_max_blink"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

	</LinearLayout>

    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#DBDBDB"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:focusableInTouchMode="true"
	    android:focusable="true"
	    android:gravity="center_horizontal">

	    <CheckBox
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Override Blink Intervals"
		android:button="@null"
		android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        	android:id="@+id/touchkey_bln_override_interval"
        	android:textSize="20dp"
        	android:layout_alignParentTop="true"/>
	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="On"
            android:layout_marginRight="40dp"
            android:id="@+id/touchkey_bln_on_interval_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(msecs)"
            android:layout_marginRight="40dp"
            android:id="@+id/touchkey_bln_msec_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Off"
            android:id="@+id/touchkey_bln_off_interval_text"/>

	</TableRow>

	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:id="@+id/touchkey_bln_intervals">

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:maxLength="4"
            android:id="@+id/touchkey_bln_on_interval"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:maxLength="4"
            android:gravity="right"
            android:id="@+id/touchkey_bln_off_interval"
            android:layout_gravity="center_horizontal" />
	</TableRow>

    </LinearLayout>

</LinearLayout>
